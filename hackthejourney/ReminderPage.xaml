<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="hackthejourney.ReminderPage">
    <Grid BackgroundColor="White">


          <Image Source="logo.png"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  VerticalOptions="StartAndExpand"
                  WidthRequest="175"
                  HeightRequest="70"
                  Grid.Row="0"
                  Grid.Column="0"/>

         <ImageButton Source="calendar.png"
                      HorizontalOptions="Center"
                      VerticalOptions="Center" />
        <Button Text="home.png"
                Grid.Row="4"
                Grid.Column="2"
                VerticalOptions="End"
                HorizontalOptions="End"
                HeightRequest="60"
                WidthRequest="100"
                CornerRadius="5"
                />
        <Button Text="guide.png"
                Grid.Row="4"
                Grid.Column="3"
                VerticalOptions="End"
                HorizontalOptions="End"
                HeightRequest="60"
                WidthRequest="100"
                CornerRadius="5"
                />

    </Grid>

</ContentPage>
